<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ViewAddQuesActivity">

    <EditText
        android:id="@+id/edHint"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/gradient_bg_text"
        android:ems="10"
        android:hint="Nhập gợi ý của bạn"
        android:inputType="text"
        android:textColorHint="#F9F9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edAnswer" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Thêm câu hỏi của bạn ở đây"
        android:textColor="#F9F9F9"
        android:textSize="30sp"
        android:background="@drawable/gradient_bg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edQuestion"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_bg_text"
        android:ems="10"
        android:hint="Nhập câu hỏi"
        android:inputType="text"
        android:textColorHint="#F9F9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edAnswer"
        android:layout_width="308dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/gradient_bg_text"
        android:ems="10"
        android:hint="Nhập câu trả lời"
        android:inputType="text"
        android:textColorHint="#F9F9F9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edQuestion" />

    <ImageView
        android:id="@+id/imgViewImg"
        android:layout_width="308dp"
        android:layout_height="239dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edHint"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnChoosePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Choose Image"
        android:backgroundTint="#E2ACEB"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewImg" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Save Question"
        android:backgroundTint="#E2ACEB"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChoosePic" />

    <Button
        android:id="@+id/btnBackMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#E2ACEB"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSave" />
</androidx.constraintlayout.widget.ConstraintLayout>