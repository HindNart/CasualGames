<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <solid android:color="#09122D"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval" android:useLevel="true">
            <size android:width="10dp"/>
            <gradient
                android:type="sweep"
                android:useLevel="true"
                android:startColor="#9000A9"
                android:centerColor="#9000A9"
                android:angle="50"/>
        </shape>
    </item>
</layer-list>
