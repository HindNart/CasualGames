<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Nền của FrameLayout -->
    <solid android:color="#b87333"/> <!-- Màu nền (có thể thay đổi) -->

    <!-- Viền của FrameLayout -->
    <stroke
        android:width="2dp"
        android:color="#fba214"/>

    <!-- Bo góc (tuỳ chọn) -->
    <corners
        android:bottomLeftRadius="6dp"
        android:bottomRightRadius="6dp" /> <!-- Bo góc của khung -->

    <!-- Độ đệm giữa viền và nội dung bên trong (tuỳ chọn) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

</shape>
